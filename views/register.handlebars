<main>
<div id="regForm">
  <div class="container">
    <div class="row">        
      <form action="/register" method="post" class="col s12" name="register">
      <div class="row">
        <div class="input-field col s12">
          <select id="users" name="uType">
            <option value="0" disabled selected>Choose your Role</option>
            <option value="1">Student</option>
            <option value="2">Tutor</option>
          </select>
          <label>Sign up:</label>
        </div>


        <div class="col s12">
          Your Full Name:
          <div class="input-field inline">
            <input id="name" type="text" name="name" class="validate">
            <label for="name" data-error="wrong" data-success="right">Name</label>
          </div>
        </div>



        <div class="col s12">
          Enter a valid email please:
          <div class="input-field inline">
            <input id="email" type="email" name="email" class="validate">
            <label for="email" data-error="wrong" data-success="right">Email</label>
          </div>
        </div>



        <div class="row">
          <div class="input-field col s6">
            <input placeholder"DocBrown" id="userId" name="username" type="text" class="validate">
            <label for="username">User Name</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" name="password" class="validate">
            <label for="password">Password</label>
          </div>
        </div>


        <div class="col s12">
          Phone number:
          <div class="input-field inline">
            <input id="phone" type="phone" name="phone" class="validate">
            <label for="phone" data-error="wrong" data-success="right">{{! 555-555-1234 }}</label>
          </div>
        </div>                


        <div  class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix"></i>
            <textarea id="address" name="address" class="materialize-textarea"></textarea>
            <label for="address">Address</label>
          </div>
        </div>        


        <div id="subjects" class="input-field col s12">
          <select multiple="multiple" name="subjects">
            <option value="" disabled selected>Choose your Subject</option>
            <option value="Math">Math</option>
            <option value="English">English</option>
            <option value="Web-Development">Web-Development</option>
          </select>
          <label>Subject</label>
        </div>
        <button type="submit">Submit</button>
    </div>
      </form>     
  </div>
</div>
</div>
</main>




<script type="text/javascript">
$(document).ready(function() {
$('select').material_select();
});  


var Privileges = jQuery('#users');
var select = this.value;
Privileges.change(function () {
if ($(this).val() == '2') {
$('#subjects').show();
}
else $('#subjects').hide(); // hide div if value is not "custom"
});
</script>
